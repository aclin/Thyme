<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/UpdateFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/tvUpdateFirstName"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/update_criteria_fn" />
        
	    <EditText
	        android:id="@+id/etUpdateFirstName"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:inputType="text"
	        android:imeOptions="actionSearch"
	        android:layout_weight="3" >
	        <requestFocus />
	    </EditText>
	    
    </LinearLayout>
    <LinearLayout
        android:id="@+id/UpdateLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/tvUpdateLastName"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
            android:gravity="right"
	        android:text="@string/update_criteria_ln"/>
        
	    <EditText
	        android:id="@+id/etUpdateLastName"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:inputType="text"
	        android:imeOptions="actionSearch"
	        android:layout_weight="3" >
	    </EditText>
	    
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/UpdateEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/tvUpdateEmail"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
            android:gravity="right"
	        android:text="@string/update_criteria_email"/>
        
	    <EditText
	        android:id="@+id/etUpdateEmail"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:inputType="textEmailAddress"
	        android:imeOptions="actionSearch"
	        android:layout_weight="3" >
	    </EditText>
	    
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/llUpdateRoleSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
	    
	    <!-- <LinearLayout
	        android:id="@+id/UpdateRole"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        
	        <TextView
	            android:id="@+id/tvUpdateRole"
		        android:layout_width="0dip"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
	            android:gravity="right"
		        android:text="@string/update_criteria_role"/>
	        
		    <Spinner
		        android:id="@+id/spinUpdateRole"
		        android:layout_width="0dip"
		        android:layout_height="wrap_content"
		        android:layout_weight="3" >
		    </Spinner>
		    
	    </LinearLayout> -->
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    
	    <Button
	        android:id="@+id/btnAddRole"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="+Add a role" />
	    
	    <Button
	        android:id="@+id/btnRemoveRole"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="-Remove a role" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/llUpdateGroupSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
	</LinearLayout>
    
    <Button
        android:id="@+id/btnAddGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+Add a group" />
    
    <LinearLayout
        android:id="@+id/UpdateButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Button
            android:id="@+id/btnSendUpdateFormHumans"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Add new record" />
        
	    <Button
	        android:id="@+id/btnClearUpdateFormHumans"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Clear form" />
	    
    </LinearLayout>

</LinearLayout>
</ScrollView>